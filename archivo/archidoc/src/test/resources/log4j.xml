<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %3L:%-40F- %m%n"/>
        </layout>
    </appender>

    <category name="org.apache.commons">
        <priority value ="ERROR" />
    </category>

    <category name="ieci.tecdoc">
        <priority value ="ERROR" />
    </category>

    <category name="org">
        <priority value ="ERROR" />
    </category>

    <category name="*.JspSevlet*">
        <priority value ="ERROR" />
    </category>

    <category name="*.LoginHelper*">
        <priority value ="ERROR" />
    </category>

    <category name="org.apache.struts">
        <priority value ="ERROR" />
    </category>

    <category name="es.archigest.*">
        <priority value ="OFF" />
    </category>

    <category name="org.apache.*">
        <priority value ="ERROR" />
    </category>

    <category name="org.displaytag">
        <priority value ="ERROR" />
    </category>

    <category name="org.displaytag">
        <priority value ="ERROR" />
    </category>


    <category name="net.sf.navigator">
        <priority value ="ERROR" />
    </category>

    <category name="org.apache.axis">
        <priority value ="ERROR" />
    </category>

    <category name="org.apache.fop">
		<priority value ="ERROR"/>
	</category>


    <root>
        <priority value ="INFO" />
        <appender-ref ref="STDOUT" />
    </root>

</log4j:configuration>
