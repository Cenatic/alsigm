<?xml version="1.0" encoding="ISO-8859-1"?>
<beanformatter>

	<!-- Ponemos 2 veces la propiedad Nombre, 
	     una para mostrarla solo en html (media='html')
	     y la otra para la exportacion (media= 'xml excel csv pdf') -->
	<propertyfmt type="BeanPropertySimpleFmt" 
		     property='NOMBRE' 
		     titleKey='LOTES:NOMBRE' 
		     fieldType='LINK'
		     columnClass='width60percent'
		     headerClass='sortable'
		     sortable='true'
		     media='html'
		     />
				 
	<propertyfmt type="BeanPropertySimpleFmt" 
		     property='NOMBRE' 
		     titleKey='LOTES:NOMBRE' 
		     fieldType='LIST'
		     columnClass='width60percent'
		     headerClass='sortable'
		     sortable='true'
		     media='csv excel xml pdf'
		     />
		     
	<propertyfmt type="BeanPropertyEuroFmt" 
		     property='PRESUPUESTO' 
		     titleKey='LOTES:PRESUPUESTO' 
		     fieldType='CURRENCY' 
		     columnClass='width40percent'
		     headerClass='sortable'
		     sortable='true'
		     />
				 				 
</beanformatter>