<mapping>
    <class name="com.essiembre.library.scheduler.SchedulerTasks">
        <map-to xml="scheduler"/>
        <field name="tasksList"
               type="es.map.sn.planificador.tareas.InfoTareaSISNOT"
               collection="vector">
            <bind-xml name="task"/>
        </field>
    </class>

    <class name="es.map.sn.planificador.tareas.InfoTareaSISNOT">
        <field name="taskName"
               type="java.lang.String"
               required="true">
            <bind-xml name="name" node="attribute"/>
        </field>
        <field name="task"
               type="java.lang.String"
               required="true">
            <bind-xml name="class" node="attribute"/>
        </field>
        <field name="time"
               type="java.lang.String"
               required="false">
            <bind-xml name="time" node="attribute"/>
        </field>

        <field name="period"
               type="java.lang.String"
               required="false">
            <bind-xml name="period" node="attribute"/>
        </field>

        <field name="delay"
               type="java.lang.String"
               required="false">
            <bind-xml name="delay" node="attribute"/>
        </field>

        <field name="parameters"
               type="es.map.sn.planificador.ParametroTarea"
               collection="vector">
            <bind-xml name="task-param"/>
        </field>

    </class>

    <class name= "es.map.sn.planificador.ParametroTarea">
        <field name="key" type="java.lang.String">
            <bind-xml name="param-name" node="element"/>
        </field>
        <field name="value" type="java.lang.String">
            <bind-xml name="param-value" node="element" />
        </field>
    </class>

</mapping>

